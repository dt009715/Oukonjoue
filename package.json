{
  "name": "monorepo",
  "version": "1.0.0",
  "scripts": {
    "dev:backend": " cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "nodemailer": "^6.10.0",
    "pnpm": "^10.4.1"
  }
}
